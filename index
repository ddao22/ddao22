  <div id="button-container"></div>

  <script>
    const musicMap = {
      "Tango": "https://www.youtube.com/watch?v=TGvXjKKT9yY",
      "Bolero": "https://www.youtube.com/watch?v=kA5GkLM5C7M",
      "Jazz": "https://www.youtube.com/watch?v=HMnrl0tmd3k",
      "Salsa": "https://www.youtube.com/watch?v=8k3F_zzOeZE",
      "Bossa Nova": "https://www.youtube.com/watch?v=UJkxFhFRFDA"
      // Add more styles + links here...
    };

    const container = document.getElementById('button-container');

    for (const style in musicMap) {
      const btn = document.createElement('button');
      btn.textContent = style;
      btn.onclick = () => {
        window.open(musicMap[style], '_blank');
      };
      container.appendChild(btn);
    }
  </script>

